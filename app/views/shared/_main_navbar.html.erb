<!-- Building the navbar -->
<div id="navbar">
	
	<div id="navbar_left" class="col-sm-4">
		<h2><%= link_to "TrevBook", (@current_user ? profile_path(@current_user.profile) : root_url) %></h2>
	</div>

	<div id="main-navigation-search" class="col-sm-4">
		<% if signed_in_user? %>
			<%= form_tag profile_search_path(@profile), :method => 'get' do %>
			  <%= text_field_tag :query, nil, { class: "search-bar", placeholder: "Search Users" } %>
			  <%= submit_tag "Search", class: "btn btn-primary" %>
			<% end %>
		<% end %>
	</div>
	
	<div id="navbar_right" class="col-sm-4">
		
		<% if signed_in_user? %>

			<div class="navbar-signed-in">
				<h3>Howdy, <%= @current_user.first_name %>!</h3>
				<p><%= link_to "Logout", session_path, :method => :delete %></p>
			</div>

		<% else %>
			
			<!-- We only want this in our navbar if the user isn't logged in -->
			<%= form_tag session_path do %>
			
				<div id="navbar_email">
					<%= label_tag do %>
				    <p>Email</p>
				    <%= text_field_tag :email, nil, class: "form-control" %>
				  <% end %>
				</div>
				
				<div id="navbar_password">
					<%= label_tag do %>
				    <p>Password</p>
				    <%= password_field_tag :password, nil, class: "form-control" %>
				  <% end %>
				</div>
				
				<div id="navbar_login_btn">
					  <%= submit_tag "Login", class: "btn btn-info" %>
				</div>

			<% end %> <!-- End form_tag -->

		<% end %>

		
		
	</div>
</div>
<!-- /Building the navbar -->