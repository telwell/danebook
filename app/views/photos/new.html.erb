<main class="row">

	<!-- Photos -->
	<div class="col-sm-6 col-sm-offset-3 photo-upload text-center">

		<%=  form_for [:profile, @photo] do |photo_fields| %>
			<div class="form-group">
				<h2>Paste in the URL for a photo on the web...</h2>
				<%= text_field_tag :photo_url, nil, placeholder: "http://example.com/photo.jpg", class: "form-control" %>
			</div>

			<div class="form-group">
				<h2>Or...</h2>
				<p>Select a photo from your computer</p>
				<%= photo_fields.file_field :photo %>	
			</div>
		  
		  <div class="form-group">
		  	<%= photo_fields.submit("Upload Photo", class: "btn btn-success") %>	
		  </div>
		  

		<% end %>

		
	</div><!-- / Photos -->

</main>	<!-- /row -->